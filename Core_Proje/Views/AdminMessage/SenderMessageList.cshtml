@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-size:25px">Yazar-Admin Giden Kutusu</h4>


            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Alıcı</th>
                            <th>Alıcı Mail</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesaj</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WriterMessageID</td>
                                <td>@item.ReceiverName</td>
                                <td>@item.Sender</td>
                                <td>@item.Subject </td>
                                <td>@item.Date</td>
                                <td><a href="/AdminMessage/SenderMessageDelete/@item.WriterMessageID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/AdminMessage/AdminMessageDetails/@item.WriterMessageID" class="btn btn-outline-success">Mesajı Gör</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <div class="ilk">
                <div class="iki"><a asp-action="SenderMessageList" class="btn btn-inverse-primary">Admin Giden Mesajlar</a></div>
                <div class="üc"><a asp-action="ReceiverMessageList" class="btn btn-inverse-warning">Admin Gelen Mesajlar</a></div>
                <div class="dört"> <a asp-action="AdminMessageSend" class="btn btn-inverse-success">Yeni Mesaj Oluştur</a></div>
            </div>

            <br />
        </div>
    </div>
</div>
