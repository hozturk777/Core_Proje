@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "ReceiverMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-size:25px">Yazar-Admin Gelen Kutusu</h4>


            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Gönderen Mail</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesaj</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WriterMessageID</td>
                                <td>@item.SenderName</td>
                                <td>@item.Sender</td>
                                <td>@item.Subject </td>
                                <td>@item.Date</td>
                                <td><a href="/AdminMessage/ReceiverMessageDelete/@item.WriterMessageID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/AdminMessage/AdminMessageDetails/@item.WriterMessageID" class="btn btn-outline-success">Mesajı Gör</a></td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
                <br />
                
            </div>
            <a asp-action="SenderMessageList" class="btn btn-inverse-primary">Admin Giden Mesajlar</a>
            <a asp-action="ReceiverMessageList" class="btn btn-inverse-warning">Admin Gelen Mesajlar</a>
            <br />
        </div>
    </div>
</div>

